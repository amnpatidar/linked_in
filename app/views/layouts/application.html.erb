y<!DOCTYPE html>
<html>
  <head>
    <title>Linkdin</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_tag %> <!-- it is the salution of java script errors -->
    <!-- < %= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %> -->
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light
        navbar-inverse navbar-fixed-top mb-4" style="display: inline-flex; padding: 10px;">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item">
          <% if current_user %>
            <%= link_to posts_path, class: "navbar-brand" do %>
              <img src="assets/home-button.png" class="avatar float-left" alt='Home' height="40px" width="40px" /> 
            <% end %>
          <% end %>
        </li>
      </ul>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item">
          <% if current_user %>
          <%# byebug %>
            <%= link_to user_friendships_path(current_user.id), class: 'nav-link' do %>
              <img src="assets/network-icon.png" class="avatar float-left" alt='Connection' height="40px" width="40px" /> 
            <% end %>
          <% end %>
        </li>
      </ul>
      
    </div>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item">
          <% if current_user %>
            <%= link_to jobs_path, class: 'nav-link' do %>
              <img src="assets/job_search.png" class="avatar float-left" alt='job Search' height="40px" width="40px" /> 
            <% end %>
          <% end %>
        </li>
      </ul>
      
    </div>
  </nav>

    <p class="notice"><%= notice %></p> 
    <p class="alert"><%= alert %></p>


    <%= yield %>
  </body>
</html>
